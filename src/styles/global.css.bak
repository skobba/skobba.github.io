html {
  background-color: #f1f5f9;
  font-family: sans-serif;
}

ul {
  list-style-type: none;
}

ul > li > ul {
  padding-left: 0px;
}
/* Level 1 menu styling */
li > a {
  background-color: (red); /* Level 1 background color */
}


/* Level 1 menu styling */
ul > li > a {
  background-color: yellow; /* Level 1 background color */
  
}

/* Level 2 menu styling */
ul > li > ul > li > a {
  background-color: purple; /* Level 2 background color */

}

/* Level 3 menu styling (if needed) */
ul > li > ul > li > ul > li > a {
  background-color: green; /* Level 3 background color */

}

li > span {
  background-color: purple;
  padding-left: 0px;
}

img {
  max-width: 100%;
  height: auto;
  display: block;
}

html.dark {
  background-color: #0d0950;
  color: #fff;
}

.dark .nav-links a {
  color: #fff;
}

body {
  margin: 0 auto;
  width: 100%;
  max-width: 80ch;
  line-height: 1.5;
}

header {
  background-color: #a0faa7;
}
* {
  box-sizing: border-box;
}

h1 {
  margin: 1rem 0;
  font-size: 2.5rem;
}

/* nav styles */
.hamburger {
  padding-right: 20px;
  cursor: pointer;
}

.hamburger .line {
  display: block;
  width: 40px;
  height: 5px;
  margin-bottom: 10px;
  background-color: #ff9776;
}

.nav-links {
  width: 100%;
  top: 5rem;
  left: 48px;
  background-color: #ff9776;
  display: none;
  margin: 0;
}

.nav-links a {
  display: block;
  text-align: center;
  padding: 10px 0;
  text-decoration: none;
  font-size: 1.2rem;
  font-weight: bold;
  text-transform: uppercase;
}

.nav-links a:hover, a:focus {
  background-color: #ff9776;
}

.expanded {
  display: unset;
}

@media screen and (min-width: 636px) {
  .nav-links {
    margin-left: 5em;
    display: block;
    position: static;
    width: auto;
    background: none;
  }

  .nav-links a {
    display: inline-block;
    padding: 15px 20px;
  }

  .hamburger {
    display: none;
  }
}