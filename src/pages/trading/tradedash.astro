---
import TradingLayout from '../../layouts/TradingLayout.astro';
const docs = await Astro.glob('/src/pages/trading/**/*.md');
---
<html>
  <head>
    <title>Stock and Crypto Charts</title>
    <html>
      <head>
        <title>Stock and Crypto Charts</title>
        <style>
          /* Remove default margins and paddings */
          html, body {
            background-color: black;
            margin: 0;
            padding: 0;
            border: 0;
            height: 100%;
            width: 100%;
            overflow: hidden; /* Prevent scrollbars if the content overflows */
            display: flex;
            justify-content: center;
          }
          /* Column layout for the chart containers */
          .tradingview-widget-container {
            display: flex;
            flex-direction: column; /* Stack charts vertically */
            height: 100vh; /* Viewport height */
            width: 100vw;  /* Viewport width */
            margin: 0;
            padding: 0;
            gap: 0px; /* Space between charts */
            max-width: 500px !important;
          }
          /* Each chart container */
          .tradingview-widget-container > div {
            height: 300px !important; /* Fixed height for each widget */
            width: 100%;   /* Full width of the container */
            margin: 0;
            padding: 0;
          }
        </style>
  </head>
  <body>
    <div class="tradingview-widget-container">
      <div id="tradingview_MSFT"></div>
      <div id="tradingview_NVDA"></div>
      <div id="tradingview_AMZN"></div>
      <div id="tradingview_BTCUSDT"></div>
      <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
      <script type="text/javascript">
        function createWidget(containerId, symbol) {
          new TradingView.widget({
            "width": "100%",
            "height": "100%",
            "symbol": symbol,
            "interval": "15",  // Set interval to 15 minutes
            "timezone": "Etc/UTC",
            "theme": "dark",   // Set theme to dark mode
            "style": "3",
            "locale": "en",
            "toolbar_bg": "#333", // Customize toolbar background color
            "hide_top_toolbar": true, // Hide the top toolbar
            "hide_side_toolbar": true,
            "enable_publishing": false,
            "allow_symbol_change": true,
            "container_id": containerId
          });
        }

        // Create widgets for different symbols
        createWidget("tradingview_MSFT", "NASDAQ:MSFT");
        createWidget("tradingview_NVDA", "NASDAQ:NVDA");
        createWidget("tradingview_AMZN", "NASDAQ:AMZN");
        createWidget("tradingview_BTCUSDT", "BINANCE:BTCUSDT");
      </script>
    </div>
  </body>
</html>
