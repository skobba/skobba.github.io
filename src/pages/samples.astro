---
const pageTitle = "Samples";

const operatingSystem = "Linux";
const quantity = 3;
const footwear = "boots";
const student = false;

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];
const skillColor = "navy";    // css var
const fontWeight = "bold";    // css var
const textCase = "uppercase"; // css var
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <style define:vars={{skillColor, fontWeight, textCase}}>
      h1 {
        color: purple;
        font-size: 4rem;
      }
      .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
    </style>
  </head>
  <body>

    <p>{operatingSystem}</p>
    
    {student && <p>I am still in school.</p>}
    
    <p>I have {quantity + 8} pairs of {footwear}</p>
    
    {operatingSystem === "MacOS" ? <p>I am using a Mac.</p> : <p>I am not using a Mac.</p>}

    <p>My skills are:</p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>

  </body>
</html>