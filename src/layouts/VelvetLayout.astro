---
const { title = "Default Title", children } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <style>
html {
  background-color: #e608ff;
  font-family: sans-serif;
}

html.dark {
  background-color: #0d0950;
  color: #fff;
}

.dark .nav-links a {
  color: #fff;
}

body {
  margin: 0 auto;
  width: 100%;
  max-width: 80ch;
  padding: 1rem;
  line-height: 1.5;
}

* {
  box-sizing: border-box;
}

h1 {
  margin: 1rem 0;
  font-size: 2.5rem;
}



</style>
</head>
<body>
  <header>
    <h1>{title}</h1>
  </header>
  <main>
    {children}
  </main>
  <footer>
    <p>Footer content here</p>
  </footer>
</body>
</html>
